<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>org.walkerljl.identity</groupId>
	<artifactId>orgwalkerljl-identity</artifactId>
	<version>1.0.0-SNAPSHOT</version>
	<packaging>pom</packaging>

	<modules>
		<module>orgwalkerljl-identity-common</module>
		<module>orgwalkerljl-identity-domain</module>
		<module>orgwalkerljl-identity-dao</module>
		<module>orgwalkerljl-identity-service</module>
		<module>orgwalkerljl-identity-web</module>
		<module>orgwalkerljl-identity-rpc</module>
		<module>orgwalkerljl-identity-openservice</module>
		<module>orgwalkerljl-identity-sdk</module>
	</modules>

	<properties>
		<jdk.version>1.8</jdk.version>
		<spring.version>3.1.1.RELEASE</spring.version>
		<orgwalkerljl.commons.version>0.0.1-SNAPSHOT</orgwalkerljl.commons.version>
		<orgwalkerljl.remoting.version>0.0.1-SNAPSHOT</orgwalkerljl.remoting.version>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
	</properties>

	<build>
		<pluginManagement>
			<plugins>
				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-compiler-plugin</artifactId>
					<version>2.4</version>
					<configuration>
						<source>${jdk.version}</source>
						<target>${jdk.version}</target>
					</configuration>
				</plugin>
				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-war-plugin</artifactId>
					<version>2.2</version>
				</plugin>
				<plugin>
					<groupId>org.codehaus.mojo</groupId>
					<artifactId>cobertura-maven-plugin</artifactId>
					<version>2.5.2</version>
				</plugin>
			</plugins>
		</pluginManagement>
	</build>
	
	<dependencyManagement>
		<dependencies>
			<!-- orgwalkerljl commons -->
			<dependency>
				<groupId>org.walkerljl.commons</groupId>
				<artifactId>orgwalkerljl-commons-core</artifactId>
				<version>${orgwalkerljl.commons.version}</version>
			</dependency>
			<dependency>
				<groupId>org.walkerljl.commons</groupId>
				<artifactId>orgwalkerljl-commons-log</artifactId>
				<version>${orgwalkerljl.commons.version}</version>
			</dependency>
			<dependency>
				<groupId>org.walkerljl.commons</groupId>
				<artifactId>orgwalkerljl-commons-domain</artifactId>
				<version>${orgwalkerljl.commons.version}</version>
			</dependency>
			<dependency>
				<groupId>org.walkerljl.commons</groupId>
				<artifactId>orgwalkerljl-commons-dao</artifactId>
				<version>${orgwalkerljl.commons.version}</version>
			</dependency>
			<dependency>
				<groupId>org.walkerljl.commons</groupId>
				<artifactId>orgwalkerljl-commons-service</artifactId>
				<version>${orgwalkerljl.commons.version}</version>
			</dependency>
			<dependency>
				<groupId>org.walkerljl.commons</groupId>
				<artifactId>orgwalkerljl-commons-mvc</artifactId>
				<version>${orgwalkerljl.commons.version}</version>
			</dependency>
			
			<dependency>
				<groupId>org.walkerljl.remoting</groupId>
				<artifactId>orgwalkerljl-remoting-provider-hessian</artifactId>
				<version>${orgwalkerljl.remoting.version}</version>
			</dependency>

			<dependency>
				<groupId>javax.servlet</groupId>
				<artifactId>servlet-api</artifactId>
				<version>2.5</version>
				<scope>provided</scope>
			</dependency>

			<dependency>
				<groupId>org.aspectj</groupId>
				<artifactId>aspectjweaver</artifactId>
				<version>1.7.2</version
				>
			</dependency>
			<dependency>
				<groupId>com.jolbox</groupId>
				<artifactId>bonecp</artifactId>
				<version>0.7.1.RELEASE</version>
			</dependency>
			<dependency>
				<groupId>mysql</groupId>
				<artifactId>mysql-connector-java</artifactId>
				<version>5.1.19</version>
			</dependency>
			<dependency>
				<groupId>commons-fileupload</groupId>
				<artifactId>commons-fileupload</artifactId>
				<version>1.3.1</version>
			</dependency>
			<dependency>
				<groupId>org.apache.commons</groupId>
				<artifactId>commons-io</artifactId>
				<version>1.3.2</version>
			</dependency>
		</dependencies>
	</dependencyManagement>
</project>